<% @lists.sort_by(&:name).each do |l| %>
  <div class="cards">
    <%= link_to list_path(l), class: 'card-images' do %>
      <div class="card-index">
        <% l.movies.first(5).each do |m| %>
          <img src="<%= m.poster_url %>">
        <% end %>
        <div class="opacity-filter"></div>
        <h2><%= l.name %></h2>
      </div>
    <% end %>
    <%= link_to list_path(l), class: :trash, data: { method: :delete, confirm: "Are you sure?" } do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
  </div>
<% end %>

<div class="form-container-index" id="new-list">
  <h3>Create new playlist:</h3>
  <%= simple_form_for(@list) do |f| %>
    <%= f.input :name, placeholder: 'Playlist name', label: false %>
    <%= f.button :submit, value: 'Add playlist' %>
  <% end %>
</div>
